<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingHorizontal="8dp"
    android:paddingVertical="2dp">

    <LinearLayout
        android:id="@+id/reaction_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bg_reaction_panel"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bubble_layout"
        app:layout_constraintEnd_toEndOf="@id/bubble_layout"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/bubble_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_outgoing_message"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <include
            android:id="@+id/reply_view"
            layout="@layout/view_reply_content" />

        <include
            android:id="@+id/message_content"
            layout="@layout/item_message_content" />

        <include
            android:id="@+id/message_info"
            layout="@layout/item_message_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sticker"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/reaction_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_reaction_group"
        android:elevation="1dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:visibility="gone"
        app:flexWrap="wrap"
        app:justifyContent="flex_end"
        app:layout_constraintEnd_toEndOf="@+id/bubble_layout"
        app:layout_constraintTop_toBottomOf="@+id/bubble_layout"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
