<?xml version="1.0" encoding="utf-8"?>
<!-- @path: app/src/main/res/layout/item_outgoing_message.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="2dp"
    android:paddingStart="80dp"
    android:paddingEnd="8dp">

    <LinearLayout
        android:id="@+id/reaction_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_reaction_panel"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/bubble_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/bubble_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_outgoing_message"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reaction_panel"
        app:layout_constraintHorizontal_bias="1.0">

        <include
            android:id="@+id/reply_view"
            layout="@layout/view_reply_content" />

        <include
            android:id="@+id/message_content"
            layout="@layout/item_message_content" />

    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/reaction_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="4dp"
        android:elevation="2dp"
        app:flexWrap="wrap"
        app:justifyContent="flex_end"
        app:layout_constraintEnd_toEndOf="@+id/bubble_layout"
        app:layout_constraintTop_toBottomOf="@+id/bubble_layout"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_vertical"
        android:textAppearance="?attr/textAppearanceLabelSmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toStartOf="@+id/tv_status"
        app:layout_constraintTop_toBottomOf="@+id/reaction_group"
        tools:text="03:28 PM" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAppearance="?attr/textAppearanceLabelSmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="@+id/tv_timestamp"
        app:layout_constraintEnd_toEndOf="@+id/bubble_layout"
        app:layout_constraintTop_toTopOf="@+id/tv_timestamp"
        tools:drawableStart="@drawable/ic_read_receipt" />

</androidx.constraintlayout.widget.ConstraintLayout>
