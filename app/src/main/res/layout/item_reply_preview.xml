<!-- @path: app/src/main/res/layout/item_reply_preview.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="2dp"
    android:paddingEnd="80dp">

    <LinearLayout
        android:id="@+id/reaction_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_reaction_panel"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bubble_layout"
        app:layout_constraintStart_toStartOf="@id/bubble_layout"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/bubble_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_incoming_message"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:textColor="?attr/colorPrimary"
            android:visibility="gone"
            tools:text="John Doe"
            tools:visibility="visible" />

        <include
            android:id="@+id/quote_view"
            layout="@layout/view_reply_content" />

        <include
            android:id="@+id/message_content"
            layout="@layout/item_message_content" />

    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/reaction_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-8dp"
        android:elevation="2dp"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        app:layout_constraintStart_toStartOf="@id/bubble_layout"
        app:layout_constraintTop_toBottomOf="@id/bubble_layout"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:textAppearance="?attr/textAppearanceLabelSmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintStart_toStartOf="@id/bubble_layout"
        app:layout_constraintTop_toBottomOf="@id/reaction_group"
        tools:text="03:28 PM" />

</androidx.constraintlayout.widget.ConstraintLayout>
