<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorSurface"
    tools:context=".TweaksActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Tweaks" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/SectionHeader"
                android:text="Home Screen" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_pill_navigation"
                style="@style/Widget.Wami.Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:checked="true"
                android:text="Pill Navigation Bar"
                android:textAppearance="?attr/textAppearanceBodyLarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Use the floating pill navigation bar at the bottom."
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                style="@style/SectionHeader"
                android:text="Chat Screen" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_bubble_style"
                style="@style/Widget.Wami.Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:checked="true"
                android:text="Bubble Style Messages"
                android:textAppearance="?attr/textAppearanceBodyLarge" />
            
             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Display messages in modern chat bubbles."
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                style="@style/SectionHeader"
                android:text="Security" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_biometric_unlock"
                style="@style/Widget.Wami.Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Biometric Unlock"
                android:textAppearance="?attr/textAppearanceBodyLarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Require fingerprint or face unlock to open the app."
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <TextView
                style="@style/SectionHeader"
                android:text="Customization" />

            <LinearLayout
                android:id="@+id/row_chat_wallpaper"
                style="@style/ListItemClickable">

                <LinearLayout style="@style/ListItemTextContainer">
                    <TextView
                        style="@style/ListItemTitle"
                        android:text="Chat Wallpaper"/>
                    <TextView
                        style="@style/ListItemSubtitle"
                        android:text="Default"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="Select chat wallpaper"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
